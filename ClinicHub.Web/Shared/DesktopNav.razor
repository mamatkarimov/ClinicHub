@using MudBlazor
@using MudBlazor.Icons

<MudPaper Elevation="1" Class="d-flex flex-column pa-4" Style="height:100%;width:250px;background:var(--mud-palette-background);">
    <div class="d-flex align-center mb-6">
        <MudAvatar Image="/images/logo.png" Size="40" Class="mr-2"/>
        <MudText Typo="Typo.h6">ClinicHub</MudText>
    </div>

    <MudList>
        <MudNavLink Href="/" Icon="@Icons.Material.Filled.Home" Match="NavLinkMatch.All">Главная</MudNavLink>
        <MudNavLink Href="/patients" Icon="@Icons.Material.Filled.People">Пациенты</MudNavLink>
        <MudNavLink Href="/appointments" Icon="@Icons.Material.Filled.CalendarToday">Приемы</MudNavLink>
        <MudNavLink Href="/lab" Icon="@Icons.Material.Filled.Science">Лаборатория</MudNavLink>
        <MudNavLink Href="/hospital" Icon="@Icons.Material.Filled.LocalHospital">Стационар</MudNavLink>
    </MudList>

    <div class="mt-auto">
        <MudNavLink Href="/settings" Icon="@Icons.Material.Filled.Settings">Настройки</MudNavLink>
    </div>
</MudPaper>

